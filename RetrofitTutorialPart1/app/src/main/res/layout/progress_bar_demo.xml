<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <com.example.retrofittutorialpart1.progress.CustomProgress
        android:id="@+id/customProgressRoundedRectangle"
        android:layout_width="@dimen/custom_progress_width"
        android:layout_height="@dimen/custom_progress_height"
        android:layout_marginTop="@dimen/custom_progress_margin" />

</LinearLayout>