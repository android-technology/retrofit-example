<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Rating Bar Product -->
    <style name="ProductRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <style name="DialogRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating_dialog</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

    <style name="ratingBarStyleIndicator" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/my_rating</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@null</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:maxHeight">100dp</item>
    </style>

    <style name="RatingBarSmall">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/my_rating</item>
        <item name="android:indeterminateDrawable">@drawable/my_rating</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:maxHeight">70dp</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
    </style>
</resources>
